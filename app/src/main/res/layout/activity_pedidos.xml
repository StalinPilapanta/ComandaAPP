<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pedidos">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DD3504"
        android:textStyle="bold"
        android:text="Ingreso de Pedidos"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_bg"
        android:onClick="ingresarPedidos"
        android:text="Ingresar Pedido"
        android:textColor="#fafafa" />

    <TextView
        android:id="@+id/txtPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DD3504"
        android:textStyle="bold"
        android:text="Lista de pedidos"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="25dp"/>

    <ListView
        android:id="@+id/lvpedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>